<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuEditor.Forms.Utils"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="MuEditor.Forms.Utils.MessageBoxCustomError"
        mc:Ignorable="d"
        Title="MessageBoxCustomError" Height="168" Width="300" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Grid>
        <TextBlock x:Name="CustomMessage" HorizontalAlignment="Center" TextWrapping="Wrap" Text="---" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <Button Content="Close"  Margin="88,127,88,10" BorderThickness="0,0,0,0" Background="#B2FF0000" Foreground="#FFFDFDFD" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <materialDesign:PackIcon Kind="ErrorOutline" Margin="0,10,0,0" Height="35" Width="40" HorizontalAlignment="Center" Foreground="#FFFF0808"/>
    </Grid>
</Window>
